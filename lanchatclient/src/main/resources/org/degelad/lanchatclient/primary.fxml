<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER"
      spacing="0.1"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.degelad.lanchatclient.Controller">
    <javafx.scene.control.TextArea fx:id = "textArea"
                                   editable = "false" VBox.vgrow = "ALWAYS" />
    <javafx.scene.layout.HBox>
        <javafx.scene.control.TextField fx:id = "textField"
                                        HBox.hgrow = "ALWAYS"
                                        onAction="#sendMsg"
                                        promptText = "Введите ваше сообщение"/>
        <Button fx:id = "btn1" onAction="#sendMsg" 
                text = "Send"/>
    </javafx.scene.layout.HBox>
    
        


</VBox>
